<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivityMe"
    style="@style/PagesBorders">

    <TextView
        android:id="@+id/tvtitluLogin"
        android:layout_width="178dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="@string/login"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmailLogin"
        android:layout_width="241dp"
        android:layout_height="73dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/e_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtitluLogin"
        style="@style/EditTextGreenWhite"
        />

    <EditText
        android:id="@+id/editTextParolaLogin"
        android:layout_width="241dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailLogin"
        style="@style/EditTextGreenWhite"
        />

    <TextView
        android:id="@+id/tvAtiUitatParola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/ati_uitat_parola"
        style="@style/EditTextGreenWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextParolaLogin" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvAtiUitatParola"
        android:layout_marginTop="50dp">

        <View
            android:id="@+id/strut4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnOkLogin"
            style="@style/GreenWhiteButton"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/strut4"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="-4dp"
            android:text="@string/okLogin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:typeface="serif" />


        <Button
            android:id="@+id/btnCancelLogin"
            style="@style/GreenWhiteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/strut4"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="6dp"
            android:text="@string/cancelLogin"
            android:typeface="serif" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>